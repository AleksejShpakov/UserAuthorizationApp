<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>MainPage</servlet-name>
        <servlet-class>servlets.MainPage</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AuthorizationPage</servlet-name>
        <servlet-class>servlets.AuthorizationPage</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegistrationPage</servlet-name>
        <servlet-class>servlets.RegistrationPage</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>servlets.LogOut</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainPage</servlet-name>
        <url-pattern>/MainPage</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AuthorizationPage</servlet-name>
        <url-pattern>/authorization</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegistrationPage</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

</web-app>